<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/backgrnd_welcome_page"
        android:fillViewport="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".MainActivity">

            <Button
                android:id="@id/AboutUsBtn"
                android:layout_width="105dp"
                android:layout_height="30dp"
                android:layout_marginTop="16dp"
                android:background="@android:color/transparent"
                android:text="О нас"
                android:fontFamily="@font/roboto_light"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="12dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.233"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0"
                tools:ignore="MissingConstraints" />

            <Button
                android:id="@+id/LoginBtn"
                android:layout_width="69dp"
                android:layout_height="34dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/login_button_border"
                android:text="Войти"
                android:fontFamily="@font/roboto_light"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="12dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.873"
                app:layout_constraintStart_toEndOf="@+id/AboutUsBtn"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/RegistarationBtn"
                android:layout_width="88dp"
                android:layout_height="42dp"
                android:layout_marginTop="28dp"
                android:width="11dp"
                android:height="11dp"
                android:background="@drawable/registration_button_border"
                android:text="Регистрация"
                android:fontFamily="@font/roboto_light"
                android:textAllCaps="false"
                android:textSize="11dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.51"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView8" />

            <ImageView
                android:id="@+id/image_fred1"
                android:layout_width="98dp"
                android:layout_height="177dp"
                android:layout_marginTop="40dp"
                app:layout_constraintEnd_toEndOf="@+id/LoginBtn"
                app:layout_constraintHorizontal_bias="0.211"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/AboutUsBtn"
                app:srcCompat="@drawable/fred_01" />

            <ImageView
                android:id="@+id/image_fred2"
                android:layout_width="129dp"
                android:layout_height="220dp"
                android:layout_marginTop="20dp"
                app:layout_constraintEnd_toEndOf="@+id/textView4"
                app:layout_constraintHorizontal_bias="0.83"
                app:layout_constraintStart_toStartOf="@+id/textView4"
                app:layout_constraintTop_toBottomOf="@+id/textView4"
                app:srcCompat="@drawable/fred_02" />

            <ImageView
                android:id="@+id/image_fred3"
                android:layout_width="129dp"
                android:layout_height="200dp"
                android:layout_marginTop="24dp"
                app:layout_constraintEnd_toEndOf="@+id/textView6"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/textView6"
                app:layout_constraintTop_toBottomOf="@+id/textView6"
                app:srcCompat="@drawable/fred_03" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/bitter"
                android:text="Это Фрэд. Фрэд - космический рейнджер.\n
И он немного расстроен..."
                android:textColor="@color/white"
                android:textSize="13dp"
                app:layout_constraintEnd_toEndOf="@+id/LoginBtn"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/image_fred1"
                app:layout_constraintTop_toBottomOf="@+id/image_fred1" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/bitter"
                android:text="Фрэд расстроен из-за своего одиночества...\n
Фрэду совсем не с кем поиграть\n в его любимые видеоигры...\n
Если бы у Фрэда были друзья... Эх, если бы...
"
                android:textColor="@color/white"
                android:textSize="13dp"
                app:layout_constraintEnd_toEndOf="@+id/LoginBtn"
                app:layout_constraintHorizontal_bias="0.33"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/bitter"
                android:text="Фрэд родом с далекой планеты Kelper-22b.\n
Мечтой детства Фрэда было бороздить бескрайние\nпросторы космоса.\n
Пожертвовав своей любовью к родным и близким,\nФрэд отправился навстречу к своей цели.
"
                android:textColor="@color/grey"
                android:textSize="11dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.628"
                app:layout_constraintStart_toStartOf="@+id/textView2"
                app:layout_constraintTop_toBottomOf="@+id/textView2" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/bitter"
                android:gravity="right"
                android:text="Ученые его планеты посчитали, что игры\n приводят к деградации общества.
Несмотря на доводы народа,\n объединенное мировое правительство было намерено\n действовать жёстко.
После второй технической революции\nна планете Фрэда были уничтожены все игры!"
                android:textColor="@color/grey"
                android:textSize="11dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.333"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView3" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:fontFamily="@font/bitter"
                android:gravity="right"
                android:text="Фрэд повидал множество\nнеобитаемых планет,
но среди холодных\nи недобрых он наткнулся на нашу Землю.\n\n
Фрэд был обескуражен, когда узнал,\nчто земляне тоже  очень
любят\nкомпьютерные игры.\n
Тогда Фрэда посетила отличная идея..."
                android:textColor="@color/white"
                android:textSize="13dp"
                app:layout_constraintEnd_toEndOf="@+id/image_fred2"
                app:layout_constraintHorizontal_bias="0.744"
                app:layout_constraintStart_toStartOf="@+id/image_fred2"
                app:layout_constraintTop_toBottomOf="@+id/image_fred2" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/bitter"
                android:gravity="center"
                android:text="Благодаря совместным усилиям\n
Фрэда и разработчиков с\n
планеты Земля, на свет\n
появилось приложение, которое\n
помогает людям находить напарников\n
с совпадающими игровыми предпочтениями,\n
навыками и интересами."
                android:textColor="@color/grey"
                android:textSize="11dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView5" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/bitter"
                android:text="Фрэд больше не одинок.\n
Пусть ему и пришлось улететь с Земли\n
в поисках новых цивилизаций, зато теперь\n
у него есть друзья, которые поддержат\n
желание поиграть в видеоигры в свободное время!"
                android:textColor="@color/white"
                android:textSize="13dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.33"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/image_fred3" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="33dp"
                android:fontFamily="@font/bitter"
                android:gravity="center"
                android:text="Раздели свою любовь к играм\n
Сделай первый шаг к новым знакомствам"
                android:textColor="@color/grey"
                android:textSize="11dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.49"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView7" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="24dp"
                android:fontFamily="@font/bitter"
                android:gravity="center"
                android:text="----------------------------------------\n
PlayMate ©
"
                android:textColor="@color/white"
                android:textSize="11dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.498"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/RegistarationBtn" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</LinearLayout>