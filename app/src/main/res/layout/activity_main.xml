<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/black"
    >

    <ImageView
        android:id="@+id/menu_image"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:background="@android:drawable/checkbox_on_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.16"
        app:layout_constraintStart_toEndOf="@+id/textView"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.049"></ImageView>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Выберите пункт меню"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.057"
        android:textColor="@color/white"
        />

    <Button
        android:id="@+id/printListBtn"
        android:layout_width="315dp"
        android:layout_height="45dp"
        android:text="Вывод списка"
        android:background="@color/grey"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        />

    <Button
        android:id="@+id/balanceListBtn"
        android:layout_width="315dp"
        android:layout_height="45dp"
        android:text="Балансировка списка"
        android:background="@color/grey"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/printListBtn"
        />

    <Button
        android:id="@+id/sortListBtn"
        android:layout_width="315dp"
        android:layout_height="45dp"
        android:text="Сортировка списка"
        android:background="@color/grey"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/balanceListBtn"
        />

    <Button
        android:id="@+id/pushBackListBtn"
        android:layout_width="315dp"
        android:layout_height="45dp"
        android:text="Добавить в список"
        android:background="@color/grey"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/sortListBtn"
        />

    <Button
        android:id="@+id/getOnPosListBtn"
        android:layout_width="315dp"
        android:layout_height="45dp"
        android:text="Получить элемент"
        android:background="@color/grey"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/pushBackListBtn"
        />

    <Button
        android:id="@+id/insertOnPosListBtn"
        android:layout_width="315dp"
        android:layout_height="45dp"
        android:text="Вставить элемент"
        android:background="@color/grey"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/getOnPosListBtn"
        />

    <Button
        android:id="@+id/removeOnPosListBtn"
        android:layout_width="315dp"
        android:layout_height="45dp"
        android:text="Удалить элемент"
        android:background="@color/grey"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/insertOnPosListBtn"
        />

    <Button
        android:id="@+id/changeTypeListBtn"
        android:layout_width="315dp"
        android:layout_height="45dp"
        android:text="Поменять тип данных"
        android:background="@color/grey"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/removeOnPosListBtn"
        />

</androidx.constraintlayout.widget.ConstraintLayout>